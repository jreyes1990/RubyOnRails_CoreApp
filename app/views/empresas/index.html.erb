<!-- Inicio Empresas -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-warning">Gestión de Empresa</h6>
  </div>
  <div class="card-body">
    <div class="container-fluid">

      <div class="row">
        <div class="col-md-12">
          <div class="col-md-12 text-right">
            <!--< if tiene_permiso("BOTON NUEVO REGISTRO", "VER") %>-->
            <%= link_to new_empresa_path, class: "btn btn-outline-success btn-sm" do %>
                <span class="icon text-green-50">
                    <i class="fas fa-plus-circle"></i>
                </span>
              <span class="text">AGREGAR</span>
            <%end%>
            <!--< end %>-->
            <%= link_to root_path, class: "btn btn-outline-danger btn-sm" do %>
              <span class="icon text-red-50">
                  <i class="fas fa-home"></i>
              </span>
              <span class="text">INICIO</span>
            <%end%>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <br/>
          <div class="col-md-12 table-responsive">
            <table id="datatable" class="table table-striped table-hover table-sm table-responsive-sm table-bordered" cellspacing="0" style="width:100%">
              <thead class="text-white">
                <tr>
                  <th class="text-center">Id</th>
                  <th>Nombre</th>
                  <th class="text-center">Codigo empresa</th>
                  <th>Descripcion</th>
                  <th class="text-center">Estado</th>
                  <!--< if tiene_permiso("BOTON EDITAR REGISTRO", "VER") ||
                    tiene_permiso("BOTON ELIMINAR REGISTRO", "VER") %>-->
                    <th class="text-center">Opciones</th>
                  <!--< end %>-->
                </tr>
              </thead>

              <tbody>
                <% @empresas.each do |empresa| %>
                  <tr>
                    <td class="text-center"><%= empresa.id %></td>
                    <td><%= empresa.nombre %></td>
                    <td class="text-center"><%= empresa.codigo_empresa %></td>
                    <td><%= empresa.descripcion %></td>
                    <td class="text-center"><%= empresa.estado %></td>

                    <!--< if tiene_permiso("BOTON EDITAR REGISTRO", "VER") ||
                      tiene_permiso("BOTON ELIMINAR REGISTRO", "VER") %>-->
                    <td class="text-center">
                      <!--< if tiene_permiso("BOTON EDITAR REGISTRO", "VER") %>-->
                      <%= link_to edit_empresa_path(empresa), class: "btn btn-outline-info btn-sm " do %>
                        <i class="fas fa-edit"></i>
                      <%end%>
                      <!--< end %>
                      < if tiene_permiso("BOTON ELIMINAR REGISTRO", "VER") %>-->
                      <%= link_to  inactivar_empresa_path(:id => empresa.id), class: "btn btn-outline-danger btn-sm ", data: {controller: 'sweetalert', action: 'click->sweetalert#btnInactivar',
                                                                                                                              sweetalert_confirm_alert_value: "Inactivar",
                                                                                                                              sweetalert_cancel_alert_value: "Cancelado",
                                                                                                                              sweetalert_confirm_title_value: 'Esta seguro de inactivar <strong style="color: #1d71b9; font-weight: bold;"><p>'+"#{empresa.nombre}?"+'</p></strong>',
                                                                                                                              sweetalert_confirm_btn_value: '<i class="fas fa-check-circle"></i> <strong>Si, Inactivar</strong>',
                                                                                                                              sweetalert_cancel_btn_value: '<i class="fas fa-times-circle"></i> <strong>No, Cancelar</strong>',
                                                                                                                              sweetalert_cancel_title_value: 'Se ha cancelado la inactivación de <strong>'+"#{empresa.nombre}"+'</strong>' } do %>
                        <i class="fas fa-trash-alt"></i>
                      <%end%>
                      <!--< end %>-->
                    </td>
                    <!--< end %>-->
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
