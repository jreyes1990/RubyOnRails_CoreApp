<!-- Inicio Iconos Font-Awesomes -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-warning">Gestión de Icono FontAwesome</h6>
  </div>
  <div class="card-body">
    <div class="container-fluid">

      <div class="row">
        <div class="col-md-12">
          <div class="col-md-12 text-right">
            <!--< if tiene_permiso("BOTON NUEVO REGISTRO", "VER") %>-->
              <%= link_to new_font_awesome_path, class: "btn btn-outline-success btn-sm" do %>
                <span class="icon text-green-50">
                    <i class="fas fa-plus-circle"></i>
                </span>
                <span class="text">AGREGAR</span>
              <%end%>
            <!--< end %>-->
            <%= link_to root_path, class: "btn btn-outline-danger btn-sm" do %>
              <span class="icon text-red-50">
                  <i class="fas fa-home"></i>
              </span>
              <span class="text">INICIO</span>
            <%end%>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <br/>
          <div class="col-md-12 table-responsive">
            <table id="datatable" class="table table-striped table-hover table-sm table-responsive-sm table-bordered" cellspacing="0" style="width:100%">
              <thead class="text-white">
                <tr>
                  <th class="text-center">Id</th>
                  <th class="text-center">Icono</th>
                  <th>Prefijo</th>
                  <th>Tipo</th>
                  <th class="text-center">Codigo CSS</th>
                  <th>Termino</th>
                  <th class="text-center">Estado</th>
                  <!--< if tiene_permiso("BOTON EDITAR REGISTRO", "VER") ||
                    tiene_permiso("BOTON ELIMINAR REGISTRO", "VER") %>-->
                    <th class="text-center">Opciones</th>
                  <!--< end %>-->
                </tr>
              </thead>

              <tbody>
                <% @font_awesomes.each do |font_awesome| %>
                  <tr>
                    <td class="text-center"><%= font_awesome.id %></td>
                    <td class="text-center"><i class="<%= font_awesome.icono %>" aria-hidden="true"></i></td>
                    <td><%= font_awesome.prefijo_nombre %></td>
                    <td><%= font_awesome.tipo_icono %></td>
                    <td class="text-center"><%= font_awesome.codigo_css %></td>
                    <td><%= font_awesome.termino %></td>
                    <td class="text-center"><%= font_awesome.estado %></td>

                    <!--< if tiene_permiso("BOTON EDITAR REGISTRO", "VER") ||
                      tiene_permiso("BOTON ELIMINAR REGISTRO", "VER") %>-->
                      <td class="text-center">
                        <!--< if tiene_permiso("BOTON EDITAR REGISTRO", "VER") %>-->
                          <%= link_to edit_font_awesome_path(font_awesome), class: "btn btn-outline-info btn-sm " do %>
                            <i class="fas fa-edit"></i>
                          <%end%>
                        <!--< end %>
                        < if tiene_permiso("BOTON ELIMINAR REGISTRO", "VER") %>-->
                          <%= link_to  inactivar_font_awesome_path(:id => font_awesome.id), class: "btn btn-outline-danger btn-sm ", data: {controller: 'sweetalert', action: 'click->sweetalert#btnInactivar',
                                                                                                                                            sweetalert_confirm_alert_value: "Inactivar",
                                                                                                                                            sweetalert_cancel_alert_value: "Cancelado",
                                                                                                                                            sweetalert_confirm_title_value: 'Esta seguro de inactivar el icono <i class="'+"#{font_awesome.icono}"+'"</i>',
                                                                                                                                            sweetalert_confirm_btn_value: '<i class="fas fa-check-circle"></i> <strong>Si, Inactivar</strong>',
                                                                                                                                            sweetalert_cancel_btn_value: '<i class="fas fa-times-circle"></i> <strong>No, Cancelar</strong>',
                                                                                                                                            sweetalert_cancel_title_value: "Se ha cancelado la inactivación de #{font_awesome.icono}" } do %>
                            <i class="fas fa-trash-alt"></i>
                          <%end%>
                        <!--< end %>-->
                      </td>
                    <!--< end %>-->

                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
