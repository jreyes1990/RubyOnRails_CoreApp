<!-- Inicio Iconos Font-Awesomes -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-warning">Gesti√≥n de Icono FontAwesome</h6>
  </div>
  <div class="card-body">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <%= simple_form_for(@font_awesome) do |f| %>
            <%= f.error_notification %>
            <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

            <div class="form-inputs">
              <div class="row">
                <div class="col-md-6">
                  <%= f.input :icono %>
                </div>
                <div class="col-md-6">
                  <%= f.input :prefijo_nombre %>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <%= f.input :codigo_css %>
                </div>
                <div class="col-md-6">
                  <%= f.input :tipo_icono %>
                </div>
              </div>
              <%= f.input :termino, as: :text, input_html: {rows: 3} %>
            </div>
            <br/>

            <div class="row">
              <div class="col-md-12 text-center">
                <!--< if tiene_permiso("BOTON REGISTRAR", "VER") %>-->
                  <%= button_tag f.submit, class: "btn btn-outline-success btn-sm" do %>
                    <span class="icon text-green-50">
                      <i class="fas fa-edit"></i>
                    </span>
                    <span class="text"><%= titulo_font_awesome.upcase %></span>
                  <%end%>
                <!--< end %>-->
                <%= link_to font_awesomes_path, class: "btn btn-outline-danger btn-sm" do %>
                  <span class="icon text-red-50">
                    <i class="fas fa-arrow-circle-left"></i>
                  </span>
                  <span class="text">CANCELAR</span>
                <%end%>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
