<!-- Inicio usuarios -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Registro Usuarios</h6>
  </div>
  <div class="card-body">

    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">

          <div class="row">
            <div class="col-md-12 text-right">
              <!--< if tiene_permiso("BOTON NUEVO REGISTRO", "VER") %>-->
                <%= link_to usuarios_agregar_usuario_path, class: "btn btn-success btn-sm" do %>
                  <span class="icon text-50">
                    <i class="fas fa-plus-circle"></i>
                  </span>
                  <span class="text">AGREGAR</span>
                <%end%>
              <!--< end %>-->

              <%= link_to root_path, class: "btn btn-outline-danger btn-sm" do %>
                <span class="icon text-red-50">
                  <i class="fas fa-home"></i>
                </span>
                <span class="text">INICIO</span>
              <%end%>
            </div>

          </div>

          <div class="row">
            <div class="col-md-12">
              <br />
              <div class="col-md-12 table-responsive">
                <table id="datatable" class="table table-striped table-hover table-sm table-responsive-sm table-bordered" cellspacing="0" style="width:100%">
                  <thead class="text-white">
                    <tr>
                      <th> id </th>
                      <th> Nombre </th>
                      <th> Teléfono </th>
                      <th> Dirección </th>
                      <th> User </th>
                      <th> Estado </th>
                      <th> Opciones </th>

                    </tr>
                  </thead>
                  <tbody>
                    <% @personas.each do |p| %>
                    <tr>
                      <td> <%= p.id %> </td>
                      <td> <%= "#{p.nombre} #{p.apellido}" %> </td>
                      <td> <%= p.telefono %> </td>
                      <td> <%= p.direccion %> </td>
                      <td> <%= p.user.email %> </td>
                      <td> <%= p.estado %> </td>
                      <td>
                        <!--< if tiene_permiso("BOTON ELIMINAR REGISTRO", "VER") %>-->
                          <%= link_to  inactivar_persona_path(:id => p.id), class: "btn btn-outline-danger btn-sm ", data: { confirm: 'Se eliminara' } do %>
                          <i class="fas fa-trash-alt"></i>
                          <% end %>
                        <!--< end %>-->
                      </td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>